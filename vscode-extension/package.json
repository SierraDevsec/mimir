{
  "name": "mimir-vscode",
  "displayName": "Mimir for VSCode",
  "description": "Claude Code swarm intelligence â€” agent monitoring, kanban board, and dashboard inside VSCode",
  "version": "0.3.2",
  "publisher": "DeeJayL",
  "repository": {
    "type": "git",
    "url": "https://github.com/SierraDevsec/mimir"
  },
  "icon": "resources/mimir-icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mimir-sidebar",
          "title": "Mimir",
          "icon": "resources/mimir-icon.svg"
        }
      ]
    },
    "views": {
      "mimir-sidebar": [
        {
          "id": "mimir-sidebar-webview",
          "name": "Mimir Console",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "mimir.launchClaude",
        "title": "Launch Claude Code Terminal",
        "category": "Mimir",
        "icon": "$(hubot)"
      },
      {
        "command": "mimir.launchSwarm",
        "title": "Launch Swarm Terminal (tmux)",
        "category": "Mimir",
        "icon": "$(server-process)"
      },
      {
        "command": "mimir.openOrchestration",
        "title": "Open Orchestration",
        "category": "Mimir",
        "icon": "$(pulse)"
      },
      {
        "command": "mimir.openTasks",
        "title": "Open Tasks",
        "category": "Mimir"
      },
      {
        "command": "mimir.openAgents",
        "title": "Open Agents",
        "category": "Mimir"
      },
      {
        "command": "mimir.openClaudeUsage",
        "title": "Open Claude Account & Usage",
        "category": "Mimir",
        "icon": "$(graph)"
      },
      {
        "command": "mimir.openMarks",
        "title": "Open Marks & Promotion",
        "category": "Mimir",
        "icon": "$(bookmark)"
      },
      {
        "command": "mimir.openSkills",
        "title": "Open Skills",
        "category": "Mimir",
        "icon": "$(wand)"
      },
      {
        "command": "mimir.openCuration",
        "title": "Open Curation",
        "category": "Mimir",
        "icon": "$(library)"
      },
      {
        "command": "mimir.openFlows",
        "title": "Open Flow Builder",
        "category": "Mimir",
        "icon": "$(type-hierarchy)"
      },
      {
        "command": "mimir.startDaemon",
        "title": "Start Daemon",
        "category": "Mimir"
      },
      {
        "command": "mimir.stopDaemon",
        "title": "Stop Daemon",
        "category": "Mimir"
      }
    ],
    "configuration": {
      "title": "Mimir",
      "properties": {
        "mimir.port": {
          "type": "number",
          "default": 3100,
          "description": "mimir daemon port"
        },
        "mimir.autoStartDaemon": {
          "type": "boolean",
          "default": false,
          "description": "Automatically start mimir daemon on activation"
        },
        "mimir.pollingInterval": {
          "type": "number",
          "default": 5000,
          "description": "Polling interval in ms (fallback when WebSocket is unavailable)"
        }
      }
    }
  },
  "scripts": {
    "build": "esbuild --bundle src/extension.ts --outfile=dist/extension.js --format=cjs --platform=node --external:vscode --sourcemap",
    "watch": "esbuild --bundle src/extension.ts --outfile=dist/extension.js --format=cjs --platform=node --external:vscode --sourcemap --watch",
    "package": "pnpm build && vsce package --no-dependencies"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/ws": "^8.18.0",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.24.0",
    "typescript": "^5.9.0"
  },
  "dependencies": {
    "ws": "^8.19.0"
  }
}
